<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p %F:%L - %m%n" />
        </Console>
    </appenders>
    <loggers>
        <logger name="org.apache.log4j.xml" level="info" />
        <root level="all">
            <appender-ref ref="STDOUT" />
        </root>
    </loggers>
</configuration>